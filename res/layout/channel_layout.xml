<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/square"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/chan_num"
            android:layout_width="85dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/x"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="[x]"
            android:textColor="@color/DarkRed"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <com.cs.oswego.edu.dawcs.Dial
                android:id="@+id/eq_high"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp" />

            <com.cs.oswego.edu.dawcs.Dial
                android:id="@+id/eq_mid"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp" />

            <com.cs.oswego.edu.dawcs.Dial
                android:id="@+id/eq_low"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/radioGroups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
				
                <RadioButton 
                    android:id="@+id/nogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:checked="true"
                    android:text="None"
                    android:textSize="10sp" />
                <RadioButton
                    android:id="@+id/group1"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:checked="false"
                    android:text="1"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/group2"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:text="2"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/group3"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:text="3"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/group4"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:text="4"
                    android:textSize="10sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/pan_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/Chartreuse" />

    <com.cs.oswego.edu.dawcs.Dial
        android:id="@+id/pan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"/>
    
    <TextView
        android:id="@+id/gain_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:textColor="@color/Chartreuse" />

    <com.cs.oswego.edu.dawcs.VerticalSlider
        android:id="@+id/gain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:progress="0"
        android:progressDrawable="@drawable/seekbar_progress" />

</LinearLayout>